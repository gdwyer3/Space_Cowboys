<AnchorPane fx:id="mainPane" prefHeight="621.0" prefWidth="940.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.BanditEncounterController">
